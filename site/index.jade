doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width,initial-scale=1')
        title TastyPlug
        link(href='https://tastyplug.tastycat.org/style/normalize.min.css', rel='stylesheet', type='text/css')
        link(href='https://tastyplug.tastycat.org/style/skeleton.min.css', rel='stylesheet', type='text/css')
        link(href='https://tastyplug.tastycat.org/style/hint.min.css', rel='stylesheet', type='text/css')
        style.
            body {
                background-color: #0C0C0C;
                background-image:url(data:image/svg+xml;base64,);
            }
            .container {
                background-color: #FFF;
                width: 50%;
                height: 100%;
                margin-left: 25%;
                position: absolute;
                padding: 30px 20px 40px 30px;
            }
    body
        div.container
            center
                h1 TastyPlug - The plug.dj extension.
            div.row
                center 
                    h5 Drag the "TastyPlug" button to your bookmarks or right click it to save as a bookmark.
                span
                    div.row
                        div.three.columns
                            a(href="javascript:(function(){$.getScript('https://tastyplug.tastycat.org/tastyplug.min.js');}());")
                                button(data-hint="Recommended").hint--bottom.hint--success.hint--rounded TastyPlug
                        div.three.columns
                            a(href="https://tastyplug.tastycat.org/tastyplug.user.js")
                                button(data-hint="for Greasemonkey and Tampermonkey").hint--bottom.hint--info.hint--rounded UserScript
                        div.three.columns
                                button(data-hint="Soon").hint--bottom.hint--error.hint--rounded Firefox
                        div.three.columns
                            a(href="https://chrome.google.com/webstore/detail/tastyplug/faccgibalfdoihmenknhpfhldkmgaang",target="_blank")
                                button(data-hint="It may take up to 12 hours to receive updates!").hint--bottom.hint--warning.hint--rounded Chrome
                hr
            center
                h4 Features
            div.row
                div.six.columns
                    ul
                        li AutoWoot
                        li AutoJoin
                        li Hide Video
                        li Legacy Chat
                        li Booth Alert
                        li Chat Images
                div.six.columns
                    ul
                        li Custom Emotes
                        li Chat Mentions
                        li
                            h6 Join Notifications
                            ul
                                li Ranks
                                li Friends
