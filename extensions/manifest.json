{
  "manifest_version": 2,
  "name": "TastyPlug",
  "description": "<%= description %>",
  "version": "<%= version %>",
  "applications": {
    "gecko": {
      "id": "tastyplug@tastycat.org"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "*://*.plug.dj/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://plug.dj/*"
      ],
      "exclude_matches": [
        "*://plug.dj/about",
        "*://plug.dj/terms",
        "*://plug.dj/privacy"
      ],
      "js": [
        "loader.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "tastyplug.js"
  ]
}